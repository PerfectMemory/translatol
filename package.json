{
  "name": "translatol",
  "description": "A tool in order to translate XLIFF files",
  "author": "Vincent Tabary <vincent@tabary.me>",
  "repository": {
    "type": "git",
    "url": "https://github.com/vtabary/translatol"
  },
  "homepage": "https://github.com/vtabary/translatol",
  "license": "ISC",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --base-href \"\"",
    "build": "ng build --base-href \"\"",
    "build:prod": "ng build --base-href \"\" --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder build",
    "postinstall": "electron-builder install-app-deps"
  },
  "main": "electron.js",
  "build": {
    "appId": "com.vtabary.translatol",
    "productName": "Translatol",
    "copyright": "Copyright Â© 2019 Vincent Tabary",
    "files": [
      "dist/translatol",
      "src/electron",
      "electron.js"
    ],
    "directories": {
      "buildResources": "./build",
      "output": "./dist/packages/${os}/${arch}"
    },
    "win": {
      "icon": "./build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {},
    "linux": {
      "icon": "./build/icon.png",
      "category": "Utility",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.2.14",
    "@angular/common": "~11.2.14",
    "@angular/compiler": "~11.2.14",
    "@angular/core": "~11.2.14",
    "@angular/forms": "~11.2.14",
    "@angular/platform-browser": "~11.2.14",
    "@angular/platform-browser-dynamic": "~11.2.14",
    "@angular/router": "~11.2.14",
    "@clr/angular": "^5.0.0",
    "@clr/icons": "^5.0.0",
    "@clr/ui": "^5.0.0",
    "@vtabary/xliff2js": "0.2.1",
    "@webcomponents/custom-elements": "^1.0.0",
    "lodash": "^4.17.15",
    "ngx-electron": "^2.1.1",
    "rxjs": "~6.6.7",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1102.14",
    "@angular/cli": "~11.2.14",
    "@angular/compiler-cli": "~11.2.14",
    "@angular/language-service": "~11.2.14",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "electron": "^12.0.0",
    "electron-builder": "^22.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.4",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "protractor": "~7.0.0",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.0",
    "typescript": "~4.0.8"
  }
}
